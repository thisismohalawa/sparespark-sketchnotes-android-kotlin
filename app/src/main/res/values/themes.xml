<resources>
    <!-- Base application theme. -->
    <style name="Theme.Sketchnotes" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/green_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/green_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="matchMatch_">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="matchMatchPadding_" parent="matchMatch_">
        <item name="android:paddingStart">@dimen/_4sdp</item>
        <item name="android:paddingEnd">@dimen/_4sdp</item>
    </style>

    <style name="matchWrap_" parent="matchMatch_">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrapWrap_" parent="matchWrap_">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="mainTitle_" parent="matchWrap_">
        <item name="android:layout_gravity">fill</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="totalSubTitle_" parent="mainTitle_">
        <item name="android:fontFamily">@font/font_1</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="gifImg_">
        <item name="android:layout_width">@dimen/_150sdp</item>
        <item name="android:layout_height">@dimen/_160sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="updateTitle" parent="mainTitle_">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:text">@string/update</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="mainInfoTitle" parent="matchWrap_">
        <item name="android:layout_gravity">fill</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:fontFamily">@font/font_1</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="subTitle_" parent="wrapWrap_">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/red</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="progress_" parent="wrapWrap_">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_margin">@dimen/_20sdp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="actionBlueButton_" parent="matchWrap_">
        <item name="android:layout_width">@dimen/_250sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:background">@drawable/rounded_blue_btn</item>
        <item name="android:fontFamily">@font/font_1</item>
    </style>

    <style name="floatingActionBtn_">
        <item name="android:layout_width">@dimen/_45sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="editText_" parent="matchWrap_">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:maxLength">200</item>
        <item name="android:maxLines">4</item>
        <item name="android:gravity">start</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>
